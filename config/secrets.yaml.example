# Copy to config/secrets.yaml and fill in your values. This file is ignored by git.

plugins:
  weather:
    home_assistant:
      base_url: "http://homeassistant.local:8123"
      token: "YOUR_LONG_LIVED_ACCESS_TOKEN"
    overrides:
      # Supported override keys:
      # current_temperature, feels_like, current_humidity, current_wind_speed,
      # current_pressure, current_uv_index, current_visibility, current_air_quality
      # You can also set a literal value with:
      # current_temperature: { value: 72 }
      current_temperature:
        source: home_assistant
        entity_id: sensor.outdoor_temperature
      feels_like:
        source: home_assistant
        entity_id: sensor.outdoor_apparent_temperature
      current_humidity:
        source: home_assistant
        entity_id: sensor.outdoor_humidity
      current_wind_speed:
        source: home_assistant
        entity_id: sensor.outdoor_wind_speed
      current_pressure:
        source: home_assistant
        entity_id: sensor.outdoor_pressure
      current_uv_index:
        source: home_assistant
        entity_id: sensor.outdoor_uv_index
      current_visibility:
        source: home_assistant
        entity_id: sensor.outdoor_visibility
      current_air_quality:
        source: home_assistant
        entity_id: sensor.outdoor_air_quality
